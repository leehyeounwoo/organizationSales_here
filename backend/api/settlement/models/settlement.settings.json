{
  "kind": "collectionType",
  "collectionName": "settlements",
  "info": {
    "name": "Settlement",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "ProductID": {
      "type": "string"
    },
    "contractDate": {
      "type": "datetime"
    },
    "settlementStatus": {
      "type": "enumeration",
      "enum": [
        "agree",
        "waiting",
        "disagree",
        "created"
      ],
      "default": "created"
    },
    "degree": {
      "type": "string"
    },
    "userID": {
      "type": "string"
    },
    "attachment": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "rejectComment": {
      "type": "string"
    },
    "adminName": {
      "type": "string"
    },
    "settlement_turn_tables": {
      "collection": "settlement-turn-table",
      "via": "settlement"
    },
    "turn": {
      "type": "string",
      "default": "1"
    },
    "totalPrice": {
      "type": "biginteger"
    },
    "name": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "birth": {
      "type": "string"
    },
    "location": {
      "type": "text"
    },
    "subLocation": {
      "type": "text"
    },
    "paymentReject": {
      "type": "boolean",
      "default": false
    }
  }
}
